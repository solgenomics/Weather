  <div class="panel panel-info">
    <div class="panel-heading">Raw Data Table</div>
    <div class="panel-body" style="overflow:hidden">
      <div class="table-responsive">
      <table id="raw_data" class="table table-hover table-striped table-bordered" width="100%"></table>
      </div>
    </div>
  </div>
</div>
<br/>
-->
<div class="row">
  <div class="panel panel-info">
    <div class="panel-heading">Graphs</div>
    <div class="panel-body" style="overflow:hidden">
      <div id="temperature"></div>
      <div id="intensity"></div>
      <div id="dew_point"></div>
      <div id="relative_humidity"></div>
      <div id="precipitation"></div>
    </div>
  </div>
</div>
<br/>

</div>
</div>
</div>
</div>
</body>

<script>
jQuery(document).ready(function() {

jQuery('#select_all').click( function() {
    console.log("select all clicked");
    select_all_options(document.getElementById('types'));
});

initialize_events();
});

function select_all_options(obj) {
    if (!obj || obj.options.length ==0) { return; }
    for (var i=0; i<obj.options.length; i++) {
      obj.options[i].selected = true;
    }
}

</script>
